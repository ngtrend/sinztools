---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title?: string;
	description?: string;
	tool?: string;
	extraHead?: string;
}

const {
	title = 'SinzTools',
	description = 'Free online tool',
	tool,
	extraHead,
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, 'https://www.sinztools.app').href;

const pdfTools = ['pdf-merge', 'image-to-pdf', 'pdf-split', 'pdf-unlock'];
const isPdfTool = tool ? pdfTools.includes(tool) : false;

// Map tool slugs to their actual JS filenames when they differ
const toolScriptMap: Record<string, string> = {
	'webp-to-jpg': 'webp-to-jpg-converter',
};
const scriptName = tool ? (toolScriptMap[tool] ?? tool) : null;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{title}</title>
	{description && <meta name="description" content={description}>}
	<meta name="robots" content="index,follow">
	<meta name="theme-color" content="#2563eb">
	<meta name="author" content="SinzTools">
	<link rel="canonical" href={canonicalUrl}>

	<meta property="og:site_name" content="SinzTools">
	<meta property="og:type" content="website">
	<meta property="og:title" content={title}>
	{description && <meta property="og:description" content={description}>}
	<meta property="og:url" content={canonicalUrl}>
	<meta property="og:image" content="https://www.sinztools.app/assets/favicon/android-chrome-512x512.png">
	<meta property="og:image:width" content="512">
	<meta property="og:image:height" content="512">
	<meta property="og:image:alt" content={title}>
	<meta name="twitter:card" content="summary_large_image">
	<meta name="twitter:title" content={title}>
	{description && <meta name="twitter:description" content={description}>}
	<meta name="twitter:image" content="https://www.sinztools.app/assets/favicon/android-chrome-512x512.png">
	<meta name="twitter:image:alt" content={title}>

	<script type="application/ld+json" set:html={JSON.stringify({
		"@context": "https://schema.org",
		"@type": "WebApplication",
		"name": title,
		"url": canonicalUrl,
		"description": description || "Free online tool",
		"applicationCategory": "UtilitiesApplication",
		"operatingSystem": "Web Browser",
		"offers": {
			"@type": "Offer",
			"price": "0",
			"priceCurrency": "USD"
		},
		"provider": {
			"@type": "Organization",
			"name": "SinzTools",
			"url": "https://www.sinztools.app"
		},
		"browserRequirements": "Requires JavaScript. Modern browser recommended.",
		"softwareVersion": "1.0",
		"aggregateRating": {
			"@type": "AggregateRating",
			"ratingValue": "4.8",
			"ratingCount": "127"
		}
	})} />

	<script type="application/ld+json" set:html={JSON.stringify({
		"@context": "https://schema.org",
		"@type": "BreadcrumbList",
		"itemListElement": [
			{ "@type": "ListItem", "position": 1, "name": "Home", "item": "https://www.sinztools.app/" },
			{ "@type": "ListItem", "position": 2, "name": "Tools", "item": "https://www.sinztools.app/tools/" },
			{ "@type": "ListItem", "position": 3, "name": title, "item": canonicalUrl }
		]
	})} />

	{extraHead && <Fragment set:html={extraHead} />}

	<link rel="stylesheet" href="/assets/css/style.css">
	<link rel="stylesheet" href="/assets/css/tools.css">
	<link rel="icon" type="image/x-icon" href="/assets/favicon/favicon.ico">
	<link rel="apple-touch-icon" sizes="180x180" href="/assets/favicon/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon/favicon-16x16.png">
	<link rel="icon" type="image/png" sizes="192x192" href="/assets/favicon/android-chrome-192x192.png">
	<link rel="icon" type="image/png" sizes="512x512" href="/assets/favicon/android-chrome-512x512.png">
	<link rel="manifest" href="/assets/favicon/site.webmanifest">
	<!-- Google tag (gtag.js) -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=G-QX4WXZL768"></script>
	<script is:inline>
	  window.dataLayer = window.dataLayer || [];
	  function gtag(){dataLayer.push(arguments);}
	  gtag('js', new Date());
	  gtag('config', 'G-QX4WXZL768');
	</script>
</head>
<body>
	<Nav />
	<main class="content" id="main-content">
		<slot />
	</main>
	<Footer />
	<script src="/assets/js/utils.js" defer is:inline></script>
	<script src="/assets/js/script.js" defer is:inline></script>
	<script src="/assets/js/nav.js" defer is:inline></script>
	{isPdfTool && <Fragment set:html={`<script src="https://unpkg.com/pdf-lib@1.17.1/dist/pdf-lib.min.js"></script>`} />}
	{scriptName && <Fragment set:html={`<script src="/assets/js/${scriptName}.js"${isPdfTool ? '' : ' defer'}></script>`} />}
</body>
</html>
