---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title?: string;
	description?: string;
	extraHead?: string;
}

const {
	title = 'SinzTools - Free Online Tools for Images, PDFs & More',
	description = 'Free online tools for image conversion, compression, PDF manipulation, and more. Privacy-first, browser-based utilities that work offline.',
	extraHead,
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, 'https://www.sinztools.app').href;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{title}</title>
	<meta name="description" content={description}>
	<meta name="robots" content="index,follow">
	<meta name="theme-color" content="#2563eb">
	<meta name="author" content="SinzTools">
	<meta name="keywords" content="free online tools, image converter, pdf merger, image compressor, webp converter, png to jpg, browser tools, privacy tools">
	<link rel="canonical" href={canonicalUrl}>

	<meta property="og:site_name" content="SinzTools">
	<meta property="og:type" content="website">
	<meta property="og:title" content={title}>
	<meta property="og:description" content={description}>
	<meta property="og:url" content={canonicalUrl}>
	<meta property="og:image" content="https://www.sinztools.app/assets/favicon/android-chrome-512x512.png">
	<meta property="og:image:width" content="512">
	<meta property="og:image:height" content="512">
	<meta property="og:image:alt" content="SinzTools - Free Online Tools">
	<meta name="twitter:card" content="summary_large_image">
	<meta name="twitter:title" content={title}>
	<meta name="twitter:description" content={description}>
	<meta name="twitter:image" content="https://www.sinztools.app/assets/favicon/android-chrome-512x512.png">
	<meta name="twitter:image:alt" content="SinzTools Logo">

	{extraHead && <Fragment set:html={extraHead} />}

	<link rel="stylesheet" href="/assets/css/style.css">
	<link rel="icon" type="image/x-icon" href="/assets/favicon/favicon.ico">
	<link rel="apple-touch-icon" sizes="180x180" href="/assets/favicon/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon/favicon-16x16.png">
	<link rel="icon" type="image/png" sizes="192x192" href="/assets/favicon/android-chrome-192x192.png">
	<link rel="icon" type="image/png" sizes="512x512" href="/assets/favicon/android-chrome-512x512.png">
	<link rel="manifest" href="/assets/favicon/site.webmanifest">
	<!-- Google tag (gtag.js) -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=G-QX4WXZL768"></script>
	<script is:inline>
	  window.dataLayer = window.dataLayer || [];
	  function gtag(){dataLayer.push(arguments);}
	  gtag('js', new Date());
	  gtag('config', 'G-QX4WXZL768');
	</script>
</head>
<body>
	<Nav />
	<main class="content">
		<slot />
	</main>
	<Footer />
	<script src="/assets/js/tool-search.js" defer is:inline></script>
</body>
</html>
