<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{{ title or "SinzTools" }}</title>
	{% if description %}
	<meta name="description" content="{{ description }}">
	{% endif %}
	<meta name="robots" content="index,follow">
	<meta name="theme-color" content="#2563eb">
	<meta name="author" content="SinzTools">
	<link rel="canonical" href="https://www.sinztools.app{{ page.url }}">

	{# Social previews (Open Graph / Twitter) #}
	<meta property="og:site_name" content="SinzTools">
	<meta property="og:type" content="website">
	<meta property="og:title" content="{{ title or "SinzTools" }}">
	{% if description %}
	<meta property="og:description" content="{{ description }}">
	{% endif %}
	<meta property="og:url" content="https://www.sinztools.app{{ page.url }}">
	<meta property="og:image" content="https://www.sinztools.app/assets/favicon/android-chrome-512x512.png">
	<meta property="og:image:width" content="512">
	<meta property="og:image:height" content="512">
	<meta property="og:image:alt" content="{{ title or "SinzTools" }}">
	<meta name="twitter:card" content="summary_large_image">
	<meta name="twitter:title" content="{{ title or "SinzTools" }}">
	{% if description %}
	<meta name="twitter:description" content="{{ description }}">
	{% endif %}
	<meta name="twitter:image" content="https://www.sinztools.app/assets/favicon/android-chrome-512x512.png">
	<meta name="twitter:image:alt" content="{{ title or "SinzTools" }}">

	{# Structured Data for Tools #}
	<script type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "WebApplication",
		"name": "{{ title or "SinzTools" }}",
		"url": "https://www.sinztools.app{{ page.url }}",
		"description": "{{ description or "Free online tool" }}",
		"applicationCategory": "UtilitiesApplication",
		"operatingSystem": "Web Browser",
		"offers": {
			"@type": "Offer",
			"price": "0",
			"priceCurrency": "USD"
		},
		"provider": {
			"@type": "Organization",
			"name": "SinzTools",
			"url": "https://www.sinztools.app"
		}
	}
	</script>

	{% if head %}
	{{ head | safe }}
	{% endif %}
	<link rel="stylesheet" href="/assets/css/style.css">
	<link rel="stylesheet" href="/assets/css/tools.css">
	<link rel="icon" type="image/x-icon" href="/assets/favicon/favicon.ico">
	<link rel="apple-touch-icon" sizes="180x180" href="/assets/favicon/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon/favicon-16x16.png">
	<link rel="icon" type="image/png" sizes="192x192" href="/assets/favicon/android-chrome-192x192.png">
	<link rel="icon" type="image/png" sizes="512x512" href="/assets/favicon/android-chrome-512x512.png">
	<link rel="manifest" href="/assets/favicon/site.webmanifest">
	<!-- Google tag (gtag.js) -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=G-QX4WXZL768"></script>
	<script>
	  window.dataLayer = window.dataLayer || [];
	  function gtag(){dataLayer.push(arguments);}
	  gtag('js', new Date());
	  gtag('config', 'G-QX4WXZL768');
	</script>
</head>
<body>
	{% include "nav.njk" %}
	<main class="content">
		{{ content | safe }}
	</main>
	{% include "footer.njk" %}
	<script src="/assets/js/utils.js" defer></script>
	<script src="/assets/js/script.js" defer></script>
	<script src="/assets/js/nav.js" defer></script>
	{% if tool == 'pdf-merge' or tool == 'image-to-pdf' or tool == 'pdf-split' %}
	<script src="https://unpkg.com/pdf-lib@1.17.1/dist/pdf-lib.min.js"></script>
	{% endif %}
	{% if tool %}
	{% if tool == 'pdf-merge' or tool == 'image-to-pdf' or tool == 'pdf-split' %}
	<script src="/assets/js/{{ tool }}.js"></script>
	{% else %}
	<script src="/assets/js/{{ tool }}.js" defer></script>
	{% endif %}
	{% endif %}
</body>
</html>