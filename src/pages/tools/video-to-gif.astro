---
import Tool from '../../layouts/Tool.astro';

const extraHead = `<script src="https://cdn.jsdelivr.net/npm/gif.js@0.2.0/dist/gif.js"></script>`;
---

<Tool
	title="Video to GIF Converter â€“ Free Online | SinzTools"
